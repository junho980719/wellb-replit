
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
    "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
    "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <!-- 기본 레이아웃 -->
    <definition name="layout.main" template="/WEB-INF/views/layout/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/layout/header.jsp" />
        <put-attribute name="content" value="" />
        <put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp" />
    </definition>
    
    <!-- 홈 페이지 -->
    <definition name="home/index" extends="layout.main">
        <put-attribute name="content" value="/WEB-INF/views/home/index.jsp" />
    </definition>
    
    <!-- 사용자 페이지들 -->
    <definition name="user/index" extends="layout.main">
        <put-attribute name="content" value="/WEB-INF/views/user/index.jsp" />
    </definition>
    
    <definition name="user/login" extends="layout.main">
        <put-attribute name="content" value="/WEB-INF/views/user/login.jsp" />
    </definition>
</tiles-definitions>
